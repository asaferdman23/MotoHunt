<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeamSetActivity">

    <include
        android:id="@+id/include_app_bar"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/linearLayout11"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="44dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/moto_hunt_logo"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/motohunt_logo"
                    tools:ignore="ContentDescription" />

                <EditText
                    android:id="@+id/team_name_input"
                    android:layout_width="337dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="20dp"
                    android:autofillHints=""
                    android:background="@drawable/edit_text_bg"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/team"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:singleLine="true"
                    tools:ignore="DuplicateSpeakableTextCheck" />


                <AutoCompleteTextView
                    android:id="@+id/team_member_name1"
                    android:layout_width="337dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_text_bg"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/name_team_member"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:singleLine="true"
                    tools:ignore="Autofill,DuplicateSpeakableTextCheck" />

                <AutoCompleteTextView
                    android:id="@+id/team_member_name2"
                    android:layout_width="337dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_text_bg"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/name_team_member"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:singleLine="true"
                    tools:ignore="Autofill,DuplicateSpeakableTextCheck" />

                <AutoCompleteTextView
                    android:id="@+id/team_member_name3"
                    android:layout_width="337dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_text_bg"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/name_team_member"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:singleLine="true"
                    tools:ignore="Autofill" />

                <AutoCompleteTextView
                    android:id="@+id/team_member_name4"
                    android:layout_width="337dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_text_bg"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/name_team_member"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:singleLine="true"
                    tools:ignore="Autofill" />

                <AutoCompleteTextView
                    android:id="@+id/team_member_name5"
                    android:layout_width="337dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_text_bg"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/name_team_member"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:singleLine="true"
                    tools:ignore="Autofill" />

                <AutoCompleteTextView
                    android:id="@+id/team_member_name6"
                    android:layout_width="337dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_text_bg"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/name_team_member"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:singleLine="true"
                    tools:ignore="Autofill" />
            </LinearLayout>
        </ScrollView>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/set_your_team_button"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shape"
        android:padding="10dp"
        android:text="@string/set_moto_team_button"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.99"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>